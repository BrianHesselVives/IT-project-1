@using MassageHuis.ViewModels
@model MassageHuis.ViewModels.VerlofVM
@if (Model.VerlofGeregistreerd == true)
{
    <div class="alert alert alert-success alert-dismissible fade show" role="alert">
        Verlof succesvol geregistreerd
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!ViewContext.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Er zijn problemen opgetreden:</strong>
        <ul>
            @foreach (var keyValuePair in ViewContext.ViewData.ModelState)
            {
                var key = keyValuePair.Key;
                var modelState = keyValuePair.Value;
                @foreach (var error in modelState.Errors)
                {
                    @if (string.IsNullOrEmpty(key))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                    else if (key == "VerlofRegistratie")
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            }
        </ul>
    </div>
}

