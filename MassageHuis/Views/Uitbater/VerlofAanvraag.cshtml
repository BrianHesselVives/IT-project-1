@using MassageHuis.ViewModels
@model MassageHuis.ViewModels.VerlofVM

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4"><i class="bi bi-calendar-plus mr-2"></i> Verlof / Periode </h2>
        <form method="post" asp-controller="Uitbater" asp-action="BevestigVerlof">
            <div class="form-group">
                <label for="startDate"><i class="bi bi-calendar-date mr-2"></i> Startdatum</label>
                <input type="date" class="datepicker form-control" id="startDate" placeholder="Kies een startdatum" min="@DateTime.Now" asp-for="StartDatum">
            </div>
            <div class="form-group">
                <label for="endDate"><i class="bi bi-calendar-range mr-2"></i> Einddatum (optioneel voor periode)</label>
                <input type="date" class="datepicker form-control" id="endDate" placeholder="Kies een einddatum" min="@DateTime.Now.AddDays(1)" asp-for="EindDatum">
                <small class="form-text text-muted"><i class="bi bi-info-circle mr-2"></i> Laat leeg voor een enkele dag verlof.</small>
            </div>
            <div class="form-group">
                <label><i class="bi bi-clock mr-2"></i> Periode:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="fullDay" value="@VerlofVM.FullDay" asp-for="DagDeel">

                    <label class="form-check-label" for="fullDay">
                        <i class="bi bi-sun mr-2"></i> Volledige dag
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="morning" value="@VerlofVM.Morning" asp-for="DagDeel">
                    <label class="form-check-label" for="morning">
                        <i class="bi bi-sunrise mr-2"></i> Voormiddag
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="afternoon" value="@VerlofVM.Afternoon" asp-for="DagDeel">
                    <label class="form-check-label" for="afternoon">
                        <i class="bi bi-sunset mr-2"></i> Namiddag
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Verlof Bevestigen</button>
        </form>
    </div>
</div>
