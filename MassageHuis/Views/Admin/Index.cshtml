@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Overzicht Administrator";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    @if (Model != null && Model.Any(r => r.Name.ToLower() == "klant" || r.Name.ToLower() == "masseur" || r.Name.ToLower() == "uitbater" || r.Name.ToLower() == "administrator"))
    {
        <div class="row mt-3 row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model.Where(r => r.Name.ToLower() == "klant" || r.Name.ToLower() == "masseur" || r.Name.ToLower() == "administrator" || r.Name.ToLower() == "uitbater"))
            {
                <div class="col">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body d-flex flex-column align-items-start">                            
                            <h5 class="card-title fw-bold">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="card-text flex-grow-1 text-muted small">Beheer de gebruikers die aan deze rol zijn toegewezen.</p>
                            <a asp-controller="Admin" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mt-auto">
                                <i class="bi bi-person-gear-fill me-2"></i> Beheren
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="mt-3">Er zijn geen relevante rollen gevonden.</p>
    }
</div>